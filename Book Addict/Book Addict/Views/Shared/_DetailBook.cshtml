@model Book_Addict.Book

<section id="header" class="header-floating-icons" data-plugin-options="{'stickyEnabled': false, 'stickyEnableOnBoxed': false, 'stickyEnableOnMobile': false, 'stickyStartAt': 0, 'stickySetTop': '60px', 'stickyChangeLogo': false}">
    <div class="header-body">
        <div class="header-container container">
            <div class="header-row">
                <div class="header-column">
                    <div class="header-row">
                        <div class="header-nav pt-1">
                            <div class="header-nav-main">
                                <nav class="wrapper-spy collapse">
                                    <ul class="nav" id="mainNav">
                                        <li>
                                            <a data-hash href="#hakkinda" class="nav-link text-color-dark bg-color-primary">
                                                <i class="icon-book-open icons"></i>
                                                <span class="custom-tooltip">Hakkında</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-hash href="#yorumlar" class="nav-link text-color-dark bg-color-primary">
                                                <i class="icon-bubble icons"></i>
                                                <span class="custom-tooltip">Kitap Yorumları</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                            <button class="btn header-btn-collapse-nav" data-toggle="collapse" data-target=".header-nav-main nav">
                                <i class="fas fa-bars"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="hakkinda" class="section section-no-border section-parallax custom-section-padding-1 custom-position-1 custom-xs-bg-size-cover parallax-no-overflow m-0" data-plugin-parallax data-plugin-options="{'speed': 1.5}" data-image-src="../../../../asset/img/bg-cover.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 custom-sm-margin-bottom-1">
                <img src="@Model.CoverPicturePath" class="img-fluid custom-border custom-image-position-2 custom-box-shadow-4" alt="" />
            </div>
            <div class="col-lg-6 col-xl-5">
                <h1 class="text-color-primary custom-font-size-1">@Model.Name</h1>
            </div>
        </div>
    </div>
</section>

<section class="section section-no-border bg-color-light m-0">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="custom-box-details bg-color-light custom-box-shadow-1 col-lg-6 ml-5 mb-5 mb-lg-4 float-right clearfix">
                    <h4>Kitap Detayları</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="custom-list-style-1 p-0 mb-0">
                                <li>
                                    <span class="text-color-dark">Adı:</span>
                                    <span class="custom-text-color-2">@Model.Name</span>
                                </li>
                                <li>
                                    <span class="text-color-dark">Sayfa Sayısı:</span>
                                    <span class="custom-text-color-2">@Model.NumberOfPages</span>
                                </li>
                                @if (Model.Authors != null && Model.Authors.Count != 0)
                                {
                                    <li>
                                        <span class="text-color-dark">Yazarı:</span>
                                        <span class="custom-text-color-2"> @Model.Authors[0].Fullname</span>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="custom-list-style-1 p-0 mb-0">
                                <li>
                                    <span class="text-color-dark">Dil:</span>
                                    <span class="custom-text-color-2">@Model.Language.Language</span>
                                </li>
                                @if (Model.PublicationInformation != null && Model.PublicationInformation.Count != 0)
                                {
                                    <li>
                                        <span class="text-color-dark">ISBN:</span>
                                        <span class="custom-text-color-2">@Model.PublicationInformation[0].ISBN</span>
                                    </li>
                                    <li>
                                        <span class="text-color-dark">Yayın Yılı:</span>
                                        <span class="custom-text-color-2">@Model.PublicationInformation[0].PublishYear</span>
                                    </li>
                                    <li>
                                        <span class="text-color-dark">Yayınevi:</span>
                                        <span class="custom-text-color-2">@Model.PublicationInformation[0].Publisher[0].Name</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <h2 class="text-color-quaternary font-weight-extra-bold text-uppercase">Kitap Hakkında</h2>
                <p class="custom-text-color-2">
                    @Model.Description
                </p>
            </div>
        </div>
    </div>
</section>

<section id="yorumlar" class="section section-height-4 mt-0 mb-3 border-0 p-5">
    <div class="container">
        <div class="row justify-content-center">
            <h2 class="text-white text-color-quaternary font-weight-extra-bold text-uppercase ">Yorumlar</h2>
            <div class="col-lg-12">
                <div class="owl-carousel owl-theme stage-margin stage-margin-lg nav-style-2 mb-0" data-plugin-options="{'items': 1, 'margin': 100, 'loop': false, 'nav': true, 'dots': false, 'stagePadding': 100}">
                    @if (Model.Comments != null && Model.Comments.Count != 0)
                    {
                        foreach (var comment in Model.Comments)
                        {
                            if (comment.UserInformation != null && comment.UserInformation.Count != 0)
                            {
                                <div>
                                    <div class="testimonial testimonial-primary mb-0">
                                        <blockquote>
                                            <p class="mb-0 text-uppercase">@comment.Comment</p>
                                        </blockquote>
                                        <div class="testimonial-arrow-down"></div>
                                        <div class="testimonial-author">
                                            <div class="testimonial-author-thumbnail">
                                                <img src="~/asset/img/clients/client-1.jpg" class="rounded-circle" alt="">
                                            </div>
                                            <a href="~/User/Detail/@comment.UserInformation[0].ID" class="text-decoration-none"><strong> @comment.UserInformation[0].Fullname</strong><span> @comment.UserInformation[0].Username</span></a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>