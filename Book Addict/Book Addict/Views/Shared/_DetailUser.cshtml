@model Book_Addict.User

<section id="header" class="header-floating-icons" data-plugin-options="{'stickyEnabled': false, 'stickyEnableOnBoxed': false, 'stickyEnableOnMobile': false, 'stickyStartAt': 0, 'stickySetTop': '60px', 'stickyChangeLogo': false}">
    <div class="header-body">
        <div class="header-container container">
            <div class="header-row">
                <div class="header-column">
                    <div class="header-row">
                        <div class="header-nav pt-1">
                            <div class="header-nav-main">
                                <nav class="wrapper-spy collapse">
                                    <ul class="nav" id="mainNav">
                                        <li>
                                            <a data-hash href="#hakkinda" class="nav-link text-color-dark bg-color-primary">
                                                <i class="icon-user icons"></i>
                                                <span class="custom-tooltip">Hakkında</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-hash href="#okuyacagikitaplar" class="nav-link text-color-dark bg-color-primary">
                                                <i class="icon-eye icons"></i>
                                                <span class="custom-tooltip">Okuyacağı Kitaplar</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-hash href="#okudugukitaplar" class="nav-link text-color-dark bg-color-primary">
                                                <i class="icon-check icons"></i>
                                                <span class="custom-tooltip">Okuduğu Kitaplar</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-hash href="#favorikitaplari" class="nav-link text-color-dark bg-color-primary">
                                                <i class="icon-like icons"></i>
                                                <span class="custom-tooltip">Favori Kitapları</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-hash href="#favoriyazarlari" class="nav-link text-color-dark bg-color-primary">
                                                <i class="icon-pencil icons"></i>
                                                <span class="custom-tooltip">Favori Yazarları</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-hash href="#favorikategorileri" class="nav-link text-color-dark bg-color-primary">
                                                <i class="icon-list icons"></i>
                                                <span class="custom-tooltip">Favori Kategorileri</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                            <button class="btn header-btn-collapse-nav" data-toggle="collapse" data-target=".header-nav-main nav">
                                <i class="fas fa-bars"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="hakkinda" class="section section-no-border section-parallax custom-section-padding-1 custom-position-1 custom-xs-bg-size-cover parallax-no-overflow m-0" data-plugin-parallax data-plugin-options="{'speed': 1.5}" data-image-src="../../../../asset/img/bg-cover.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 custom-sm-margin-bottom-1">
                <img src="@Model.PicturePath" class="img-fluid custom-border custom-image-position-2 custom-box-shadow-4" alt="" />
            </div>
            <div class="col-lg-6 col-xl-5">
                <h1 class="text-color-primary custom-font-size-1">@Model.Fullname</h1>
            </div>
        </div>
    </div>
</section>

<section class="section" id="okuyacagikitaplar">
    <div class="heading heading-border heading-middle-border heading-middle-border-center mt-4 text-decoration-none">
        <h3 class="font-weight-normal">OKUYACAĞI KİTAPLAR</h3>
    </div>
    @if (Model.WillReadBooks != null && Model.WillReadBooks.Count != 0)
    {
        <div class="owl-carousel owl-theme full-width" data-plugin-options="{'items': 8, 'loop': false, 'nav': true, 'dots': false , 'center' : true}">
            @foreach (var book in Model.WillReadBooks)
            {
                <div class="item link" data-href="Book/Detail/@book.ID">
                    <div class="custom-thumb-info-style-1 thumb-info thumb-info-no-borders thumb-info-lighten thumb-info-bottom-info thumb-info-bottom-info-dark thumb-info-bottom-info-show-more thumb-info-no-zoom thumb-info-hide-wrapper-bg cur-pointer">
                        <div class="thumb-info-wrapper overlay overlay-show overlay-op-5">
                            <img src="@book.CoverPicturePath" class="img-fluid" alt="">
                            <div class="thumb-info-title bg-transparent">
                                @Html.ActionLink(book.Name, "Detail", "Book", new { id = book.ID }, new { @class = "text-white text-decoration-none thumb-info-inner line-height-1 custom-font-size-1 custom-font-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

<section class="section" id="okudugukitaplar">
    <div class="heading heading-border heading-middle-border heading-middle-border-center mt-4 text-decoration-none">
        <h3 class="font-weight-normal">OKUDUĞU KİTAPLAR</h3>
    </div>
    @if (Model.ReadBooks != null && Model.ReadBooks.Count != 0)
    {
        <div class="owl-carousel owl-theme full-width" data-plugin-options="{'items': 8, 'loop': false, 'nav': true, 'dots': false , 'center' : true}">
            @foreach (var book in Model.ReadBooks)
            {
                <div class="item link" data-href="Book/Detail/@book.ID">
                    <div class="custom-thumb-info-style-1 thumb-info thumb-info-no-borders thumb-info-lighten thumb-info-bottom-info thumb-info-bottom-info-dark thumb-info-bottom-info-show-more thumb-info-no-zoom thumb-info-hide-wrapper-bg cur-pointer">
                        <div class="thumb-info-wrapper overlay overlay-show overlay-op-5">
                            <img src="@book.CoverPicturePath" class="img-fluid" alt="">
                            <div class="thumb-info-title bg-transparent">
                                @Html.ActionLink(book.Name, "Detail", "Book", new { id = book.ID }, new { @class = "text-white text-decoration-none thumb-info-inner line-height-1 custom-font-size-1 custom-font-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

<section class="section" id="favorikitaplari">
    <div class="heading heading-border heading-middle-border heading-middle-border-center mt-4 text-decoration-none">
        <h3 class="font-weight-normal">FAVORİ KİTAPLARI</h3>
    </div>
    @if (Model.FavouriteBooks != null && Model.FavouriteBooks.Count != 0)
    {
        <div class="owl-carousel owl-theme full-width" data-plugin-options="{'items': 8, 'loop': false, 'nav': true, 'dots': false , 'center' : true}">
            @foreach (var book in Model.FavouriteBooks)
            {
                <div class="item link" data-href="Book/Detail/@book.ID">
                    <div class="custom-thumb-info-style-1 thumb-info thumb-info-no-borders thumb-info-lighten thumb-info-bottom-info thumb-info-bottom-info-dark thumb-info-bottom-info-show-more thumb-info-no-zoom thumb-info-hide-wrapper-bg cur-pointer">
                        <div class="thumb-info-wrapper overlay overlay-show overlay-op-5">
                            <img src="@book.CoverPicturePath" class="img-fluid" alt="">
                            <div class="thumb-info-title bg-transparent">
                                @Html.ActionLink(book.Name, "Detail", "Book", new { id = book.ID }, new { @class = "text-white text-decoration-none thumb-info-inner line-height-1 custom-font-size-1 custom-font-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

<section id="favoriyazarlari" class="section section-light">
    <div class="heading heading-border heading-middle-border heading-middle-border-center mt-4 text-decoration-none">
        <h3 class="font-weight-normal">FAVORİ YAZARLARI</h3>
    </div>
    @if (Model.FavouriteAuthors != null && Model.FavouriteAuthors.Count != 0)
    {
        <div class="owl-carousel owl-theme full-width" data-plugin-options="{'items': 6, 'loop': false, 'nav': true, 'dots': false , 'autoHeight':false , 'autoHeightClass': 'owl-height'}">
            @foreach (var author in Model.FavouriteAuthors)
            {
                <a href="Author/Detail/@author.ID">
                    <div class="custom-thumb-info-style-1 thumb-info thumb-info-no-borders thumb-info-lighten thumb-info-bottom-info thumb-info-bottom-info-dark thumb-info-bottom-info-show-more thumb-info-no-zoom thumb-info-hide-wrapper-bg cur-pointer">
                        <div class="thumb-info-wrapper overlay overlay-show overlay-op-5">
                            <img src="@author.PicturePath" class="img-fluid" alt="">
                            <div class="thumb-info-title bg-transparent">
                                <div class="text-white text-decoration-none thumb-info-inner line-height-1 custom-font-size-1 custom-font-primary">@author.Fullname</div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
</section>

<section id="favorikategorileri" class="section section-light">
    <div class="heading heading-border heading-middle-border heading-middle-border-center mt-4 text-decoration-none">
        <h3 class="font-weight-normal">FAVORİ KATEGORİLERİ</h3>
    </div>
    <div class="container">
        @if (Model.FavouriteCategories != null && Model.FavouriteCategories.Count != 0)
        {
            <ul class="list list-icons list-icons-lg">
                @foreach (var category in Model.FavouriteCategories)
                {
                    <li><i class="fas fa-check"></i> @category.Name</li>
                }
            </ul>
        }
    </div>
</section>